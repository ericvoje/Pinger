<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.pinger.PingActivityFragment">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pinger"
        android:id="@+id/text_title"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Ping"
        android:id="@+id/button_ping"
        android:layout_below="@+id/text_title"
        android:layout_centerHorizontal="true"
        android:onClick="ping"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/button_ping"
        android:layout_alignParentLeft="true"
        android:text="Time: "
        android:id="@+id/text_time" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/button_ping"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text_time"
        android:id="@+id/text_timeval" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_timeval"
        android:layout_alignParentLeft="true"
        android:text="Logitude: "
        android:id="@+id/text_long" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_timeval"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text_long"
        android:id="@+id/text_longval" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_longval"
        android:layout_alignParentLeft="true"
        android:text="Latitude: "
        android:id="@+id/text_lat" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_longval"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text_lat"
        android:id="@+id/text_latval" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_latval"
        android:layout_alignParentLeft="true"
        android:text="Battery Level: "
        android:id="@+id/text_batt" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_latval"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text_batt"
        android:id="@+id/text_battval" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_battval"
        android:layout_alignParentLeft="true"
        android:text="Is Charging: "
        android:id="@+id/text_charging" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_battval"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text_charging"
        android:id="@+id/text_chargingval" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_chargingval"
        android:layout_alignParentLeft="true"
        android:text="Connected to Network: "
        android:id="@+id/text_conn" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_chargingval"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text_conn"
        android:id="@+id/text_connval" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_connval"
        android:layout_alignParentLeft="true"
        android:text="Network Type: "
        android:id="@+id/text_ntype" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_connval"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text_ntype"
        android:id="@+id/text_ntypeval" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_ntypeval"
        android:layout_alignParentLeft="true"
        android:text="SSID: "
        android:id="@+id/text_ssid" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_ntypeval"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text_ssid"
        android:id="@+id/text_ssidval" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_ssidval"
        android:layout_alignParentLeft="true"
        android:text="IP Address: "
        android:id="@+id/text_ip" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:layout_below="@+id/text_ssidval"
        android:layout_alignParentRight="true"
        android:layout_alignRight="@+id/text_ip"
        android:id="@+id/text_ipval" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceLarge"
        android:id="@+id/text_count"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true" />

</RelativeLayout>
